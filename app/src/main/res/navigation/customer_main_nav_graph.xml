<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/business_main_nav_graph" app:startDestination="@id/navigation_home">
    <fragment
            android:id="@+id/navigation_home"
            android:name="com.feedbacktower.fragments.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_navigation_home_to_selectCityFragment3"
                app:destination="@id/selectCityFragment3"/>
        <action android:id="@+id/action_navigation_home_to_businessDetailsActivity2"
                app:destination="@id/businessDetailsActivity"/>
    </fragment>
    <fragment
            android:id="@+id/navigation_search"
            android:name="com.feedbacktower.fragments.SearchFragment"
            android:label="@string/title_search"
            tools:layout="@layout/fragment_search">
        <action android:id="@+id/action_navigation_search_to_businessDetailsActivity"
                app:destination="@id/businessDetailsActivity"/>
    </fragment>
    <fragment
            android:id="@+id/navigation_customer_account"
            android:name="com.feedbacktower.fragments.customer.CustomerAccountFragment"
            android:label="@string/title_my_account"
            tools:layout="@layout/fragment_customer_account">
        <action android:id="@+id/action_navigation_customer_account_to_myReviewsFragment2"
                app:destination="@id/myReviewsFragment"/>
        <action android:id="@+id/action_navigation_customer_account_to_mySuggestionsFragment2"
                app:destination="@id/mySuggestionsFragment"/>
    </fragment>
    <activity
            android:id="@+id/businessDetailsActivity"
            android:name="com.feedbacktower.ui.BusinessDetailsActivity"
            android:label="activity_business_details"
            tools:layout="@layout/activity_business_details">
        <argument android:name="businessId" app:argType="string"/>
    </activity>
    <fragment android:id="@+id/mySuggestionsFragment" android:name="com.feedbacktower.fragments.MySuggestionsFragment"
              android:label="fragment_my_suggestions" tools:layout="@layout/fragment_my_suggestions"/>
    <fragment android:id="@+id/myReviewsFragment" android:name="com.feedbacktower.fragments.MyReviewsFragment"
              android:label="fragment_my_reviews" tools:layout="@layout/fragment_my_reviews"/>
    <fragment android:id="@+id/selectCityFragment3" android:name="com.feedbacktower.fragments.SelectCityFragment"
              android:label="SelectCityFragment">
        <argument android:name="onboarding" app:argType="boolean" android:defaultValue="true"/>
    </fragment>
</navigation>