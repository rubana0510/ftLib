<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.ads.AdDetailFragment">
    <data>
        <variable name="ad" type="com.feedbacktower.data.models.Ad"/>
        <variable name="openInBrowser" type="android.view.View.OnClickListener"/>
        <variable name="showBusinessDetails" type="android.view.View.OnClickListener"/>
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    app:loadImage="@{ad.media}"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="@id/title"
                    android:background="@drawable/bg_black_grad"
                    android:paddingTop="16dp"/>
            <TextView
                    android:id="@+id/title"
                    style="@style/LargeBoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@{ad.title}"
                    tools:text="50 % OFF AT \nROYS GARAGE"
                    app:layout_constraintBottom_toTopOf="@+id/smallDescription"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:id="@+id/smallDescription"
                    style="@style/MediumText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    tools:text="Spend over Rs. 1000 and get 50% discount"
                    android:text="@{ad.subtitle}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:id="@+id/detail_label"
                style="@style/LargeBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner"
                android:layout_marginStart="8dp"
                android:text="Details"/>
        <TextView
                android:id="@+id/details"
                style="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/detail_label"
                android:text="@{ad.info}"
                tools:text="This is long description, This is long description, This is long description, "/>
        <Button
                android:id="@+id/openBrowser"
                style="@style/ButtonFilledStyle.Big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_in_browser"
                android:layout_above="@id/businessDetails"
                android:layout_marginBottom="4dp"
                android:onClick="@{openInBrowser}"/>
        <Button
                android:id="@+id/businessDetails"
                style="@style/ButtonFilledStyle.Big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/show_business_profile"
                android:layout_marginTop="4dp"
                android:onClick="@{showBusinessDetails}"/>
    </RelativeLayout>


</layout>
