<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.business.SearchFragment">
    <data>
        <variable name="isLoading" type="Boolean"/>
        <variable name="isListEmpty" type="Boolean"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:id="@+id/searchFrame"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:stateListAnimator="@animator/raised"
                android:elevation="8dp"
                android:background="@color/colorPrimary">
            <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_search_black_24dp"
                    android:padding="8dp"
                    android:layout_marginStart="@dimen/marginStartItem"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center_vertical"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@null"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/searchIcon"
                    android:layout_toStartOf="@+id/clearButton"
                    android:hint="@string/title_search"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"/>
            <ImageButton
                    android:id="@+id/clearButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_close_black_24dp"
                    android:padding="8dp"
                    android:layout_marginEnd="@dimen/marginEndItem"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="end|center_vertical"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchFrame"
                app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_search_business"
                    app:isGone="@{isLoading}"/>
            <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/no_search_results"
                    app:isGone="@{!isListEmpty}"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>