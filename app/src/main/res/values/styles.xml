<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
    </style>

    <style name="editTextPassword" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense"/>

    <style name="EditTextStyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DialogTitleStyle" parent="Base.TextAppearance.AppCompat.Title">
    </style>

    <style name="ButtonFilledStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="ButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">@drawable/bg_rounded_outline</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="ImageButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <style name="MediumBoldText" parent="MediumText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Small">

    </style>
    <style name="SuggestionMessageStyle" parent="SmallText">

    </style>


    <style name="SuggestionReplyStyle" parent="SmallText">

    </style>
    <style name="ReviewMessageStyle" parent="SmallText">

    </style>


    <style name="UserFullNameStyle" parent="SmallText">

    </style>

    <style name="UserProfileImageStyle">

    </style>

    <style name="SmallBoldText" parent="SmallText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LargeText" parent="TextAppearance.AppCompat.Large">

    </style>

    <style name="LargeBoldText" parent="LargeText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TinyText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="businessNameStyle" parent="SmallText">

    </style>
    <style name="businessCategoryStyle"></style>
    <style name="businessCityStyle"></style>
    <style name="businessNameBigStyle" parent="LargeText">

    </style>
    <style name="IconTextViewStyle" parent="MediumText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
