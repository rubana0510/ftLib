<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/business_main_nav_graph" app:startDestination="@id/navigation_home">
    <fragment
            android:id="@+id/navigation_home"
            android:name="com.feedbacktower.fragments.HomeFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_navigation_home_to_selectCityFragment"
                app:destination="@id/selectCityFragment"/>
        <action android:id="@+id/action_navigation_home_to_businessDetailsActivity"
                app:destination="@id/businessDetailsActivity"/>
    </fragment>
    <fragment
            android:id="@+id/navigation_search"
            android:name="com.feedbacktower.fragments.SearchFragment"
            android:label="@string/title_search"
            tools:layout="@layout/fragment_search">
        <action android:id="@+id/action_navigation_search_to_businessDetailsActivity"
                app:destination="@id/businessDetailsActivity"/>
    </fragment>
    <fragment
            android:id="@+id/navigation_customer_account"
            android:name="com.feedbacktower.fragments.customer.CustomerAccountFragment"
            android:label="@string/title_my_account"
            tools:layout="@layout/fragment_customer_account">
        <action android:id="@+id/action_navigation_customer_account_to_myReviewsFragment"
                app:destination="@id/myReviewsFragment"/>
        <action android:id="@+id/action_navigation_customer_account_to_mySuggestionsFragment"
                app:destination="@id/mySuggestionsFragment"/>
        <action android:id="@+id/action_navigation_account_to_personalDetailsFragment"
                app:destination="@id/personalDetailsFragment"/>
        <action android:id="@+id/action_navigation_account_to_selectCityFragment"
                app:destination="@id/selectCityFragment"/>
    </fragment>
    <activity
            android:id="@+id/businessDetailsActivity"
            android:name="com.feedbacktower.ui.BusinessDetailsActivity"
            android:label="activity_business_details"
            tools:layout="@layout/activity_business_details">
        <argument android:name="businessId" app:argType="string"/>
    </activity>
    <fragment android:id="@+id/mySuggestionsFragment" android:name="com.feedbacktower.fragments.MySuggestionsFragment"
              android:label="My Suggestions" tools:layout="@layout/fragment_my_suggestions">
        <action android:id="@+id/action_navigation_my_suggestion_to_businessDetailsActivity"
                app:destination="@id/businessDetailsActivity"/>
    </fragment>
    <fragment android:id="@+id/myReviewsFragment" android:name="com.feedbacktower.fragments.MyReviewsFragment"
              android:label="My Reviews" tools:layout="@layout/fragment_my_reviews">
        <action android:id="@+id/action_navigation_my_review_to_businessDetailsActivity"
                app:destination="@id/businessDetailsActivity"/>
    </fragment>
    <fragment android:id="@+id/selectCityFragment" android:name="com.feedbacktower.fragments.SelectCityFragment"
              android:label="SelectCityFragment">
        <argument android:name="onboarding" app:argType="boolean" android:defaultValue="false"/>
        <argument android:name="edit" app:argType="boolean" android:defaultValue="true"/>
    </fragment>
    <fragment android:id="@+id/personalDetailsFragment"
              android:name="com.feedbacktower.fragments.PersonalDetailsFragment"
              android:label="PersonalDetailsFragment">
        <argument android:name="onboarding" app:argType="boolean" android:defaultValue="false"/>
    </fragment>
</navigation>