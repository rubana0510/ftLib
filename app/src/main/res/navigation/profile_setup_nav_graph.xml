<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/personalDetailsFragment">

    <fragment android:id="@+id/personalDetailsFragment"
              android:name="com.feedbacktower.fragments.PersonalDetailsFragment"
              android:label="Personal Details" tools:layout="@layout/fragment_personal_details">

        <action android:id="@+id/action_personalDetailsFragment_to_selectCityFragment"
                app:destination="@id/selectCityFragment"/>
    </fragment>
    <fragment android:id="@+id/selectCityFragment" android:name="com.feedbacktower.fragments.SelectCityFragment"
              android:label="Select your City" tools:layout="@layout/fragment_select_city">

        <action android:id="@+id/action_selectCityFragment_to_accountTypeSelectionFragment"
                app:destination="@id/accountTypeSelectionFragment"/>
    </fragment>
    <fragment android:id="@+id/accountTypeSelectionFragment"
              android:name="com.feedbacktower.fragments.AccountTypeSelectionFragment"
              android:label="Select your account type" tools:layout="@layout/fragment_account_selection_type">
        <action android:id="@+id/action_accountTypeSelectionFragment_to_businessSetup1Fragment"
                app:destination="@id/businessSetup1Fragment"/>
    </fragment>
    <fragment android:id="@+id/businessSetup1Fragment" android:name="com.feedbacktower.fragments.business.BusinessSetup1Fragment"
              android:label="Basic Details">
        <action android:id="@+id/action_businessSetup1Fragment_to_businessSetup2Fragment"
                app:destination="@id/businessSetup2Fragment"/>
    </fragment>
    <fragment android:id="@+id/businessSetup2Fragment" android:name="com.feedbacktower.fragments.business.BusinessSetup2Fragment"
              android:label="Address Details"/>
</navigation>