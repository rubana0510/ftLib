<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="editTextPassword" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense"/>

    <style name="EditTextStyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DialogTitleStyle" parent="Base.TextAppearance.AppCompat.Title">
    </style>

    <style name="ButtonFilledStyle" parent="Widget.MaterialComponents.Button">
<item name="android:textSize">12sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="ButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">

    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#464646</item>
    </style>
    <style name="MediumBoldText" parent="MediumText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Small">

    </style>

    <style name="SmallBoldText" parent="SmallText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LargeText" parent="TextAppearance.AppCompat.Large">

    </style>

    <style name="LargeBoldText" parent="LargeText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TinyText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
