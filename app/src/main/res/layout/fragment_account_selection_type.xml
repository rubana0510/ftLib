<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            tools:context=".fragments.AccountTypeSelectionFragment">
        <RadioGroup
                android:id="@+id/radioGroup"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/customerRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Continue as Customer"/>
            <RadioButton
                    android:id="@+id/businessRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue as Business"/>
        </RadioGroup>
        <LinearLayout
                android:id="@+id/businessFieldsLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/businessNameLayout"
                    android:hint="@string/business_name">
                <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:id="@+id/businessNameInput"
                        android:drawableEnd="@drawable/ic_person_outline_black_24dp"
                        android:drawablePadding="@dimen/drawable_padding"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/estRegNoLayout"
                    android:hint="@string/est_reg">
                <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:id="@+id/estRegNoInput"
                        android:drawableEnd="@drawable/ic_email_black_24dp"
                        android:drawablePadding="@dimen/drawable_padding"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/businessCatLayout"
                    android:hint="@string/business_cat">
                <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:id="@+id/businessCatInput"
                        android:drawableEnd="@drawable/ic_perm_contact_calendar_black_24dp"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/officeAddressLayout"
                    android:hint="@string/office_address">
                <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:id="@+id/officeAddressInput"
                        android:drawableEnd="@drawable/ic_perm_contact_calendar_black_24dp"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/officeContactLayout"
                    android:hint="@string/office_phone">
                <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:id="@+id/officeContactInput"
                        android:drawableEnd="@drawable/ic_perm_contact_calendar_black_24dp"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/officeWebsiteLayout"
                    android:hint="@string/office_website">
                <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextStyle"
                        android:id="@+id/officeWebsiteInput"
                        android:drawableEnd="@drawable/ic_perm_contact_calendar_black_24dp"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
                style="@style/ButtonFilledStyle"
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/continue_"/>
    </LinearLayout>
</ScrollView>
