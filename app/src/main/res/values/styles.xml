<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
    </style>
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
    <style name="AuthTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/hintLight</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/hintLight</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="editTextPassword" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense"/>

    <style name="EditTextStyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:colorAccent">@color/grey42</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="EditTextStyle.Auth">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/TextInputLayout.HintText</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    <style name="TextInputLayout.HintText" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textSize">@dimen/text_tiny_size</item>
    </style>
    <style name="DialogTitleStyle" parent="Base.TextAppearance.AppCompat.Title">
    </style>

    <style name="ButtonFilledStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#212121</item>
        <item name="cornerRadius">24dp</item>
    </style>

<style name="ButtonFilledStyle.Big">
    <item name="android:padding">16dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_marginStart">24dp</item>
    <item name="android:layout_marginEnd">24dp</item>
    <item name="android:layout_marginTop">16dp</item>
</style>
    <style name="ButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">@drawable/bg_rounded_outline</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <style name="MediumBoldText" parent="MediumText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Small">

    </style>
    <style name="SuggestionMessageStyle" parent="SmallText">

    </style>


    <style name="SuggestionReplyStyle" parent="SmallText">

    </style>
    <style name="ReviewMessageStyle" parent="SmallText">

    </style>


    <style name="UserFullNameStyle" parent="SmallText">

    </style>

    <style name="UserProfileImageStyle">

    </style>

    <style name="SmallBoldText" parent="SmallText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LargeText" parent="TextAppearance.AppCompat.Large">

    </style>

    <style name="LargeBoldText" parent="LargeText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTitleText" parent="LargeBoldText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="TinyText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="businessNameStyle" parent="SmallText">

    </style>
    <style name="businessCategoryStyle"></style>
    <style name="businessCityStyle"></style>
    <style name="businessNameBigStyle" parent="LargeText">

    </style>
    <style name="IconTextViewStyle" parent="MediumText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="TextLinkStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="TextLinkStyle.LogIn">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <color name="black">#000000</color>
</resources>
