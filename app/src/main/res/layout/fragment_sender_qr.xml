<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent"
             tools:context=".fragments.business.SenderQrFragment">

    <TextView
            style="@style/LargeBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Show QR code"
            android:layout_marginTop="@dimen/dimen_50dp"/>
    <TextView
            style="@style/MediumBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Avail discounts for Payments to Business"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="@dimen/dimen_80dp"/>
    <ImageView
            android:id="@+id/qrImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"/>
    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <LinearLayout
            android:layout_gravity="end|bottom"
            android:layout_margin="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/colorLogo"
                app:srcCompat="@mipmap/ic_launcher_foreground"/>
        <TextView
                style="@style/SmallBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback Tower"/>
    </LinearLayout>
</FrameLayout>