<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening --><!--
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>
    <style name="FullScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
    <style name="AuthTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/hintLight</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/hintLight</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="editTextPassword" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense"/>

    <style name="EditTextStyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:colorAccent">@color/grey42</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="EditTextStyle.Auth">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/TextInputLayout.HintText</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    <style name="TextInputLayout.HintText" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textSize">@dimen/text_tiny_size</item>
    </style>
    <style name="DialogTitleStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonFilledStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#212121</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="ButtonFilledStyle.Big">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">@drawable/bg_rounded_outline</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="OutlinedIconButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="TinyText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#616161</item>
    </style>
    <style name="SmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>
    </style>
    <style name="MediumText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#111111</item>
    </style>
    <style name="MediumBoldText" parent="MediumText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SuggestionMessageStyle" parent="SmallText">

    </style>


    <style name="SuggestionReplyStyle" parent="SmallText">

    </style>
    <style name="ReviewMessageStyle" parent="MediumText">
        <item name="android:textColor">@color/textSub</item>
    </style>


    <style name="UserFullNameStyle" parent="SmallText">
        <item name="android:textColor">@color/textMain</item>
    </style>

    <style name="UserProfileImageStyle">

    </style>

    <style name="SmallBoldText" parent="SmallText">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="LargeBoldText" parent="LargeText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTitleText" parent="LargeBoldText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="businessNameStyle" parent="SmallText">

    </style>

    <style name="SmallBoldText.P8">
        <item name="android:padding">8dp</item>
    </style>

    <style name="businessCategoryStyle"></style>
    <style name="businessCityStyle"></style>
    <style name="businessNameBigStyle" parent="LargeText">

    </style>
    <style name="IconTextViewStyle" parent="MediumText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
    </style>
    <style name="TextLinkStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="TextLinkStyle.LogIn">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <color name="black">#000000</color>
    <color name="textSub">#424242</color>
    <color name="textMain">#212121</color>

    <style name="PickerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="SmoothCheckBoxStyle">
        <item name="color_checked">@color/checkbox_color</item>
        <item name="color_unchecked">@android:color/white</item>
        <item name="color_unchecked_stroke">@color/checkbox_unchecked_color</item>
        <item name="color_tick">@android:color/white</item>
    </style>
    <style name="ProgressbarStyle"/>
</resources>
