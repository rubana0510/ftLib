<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="suggestion" type="com.feedbacktower.data.models.Suggestion"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin">
        <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/starIm"
                app:layout_constraintTop_toBottomOf="@id/dialogTitle"
                android:layout_marginStart="16dp"
                app:loadRoundImage="@{suggestion.userProfileImage}"/>
        <TextView
                android:id="@+id/userName"
                style="@style/SmallBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/userProfileImage"
                app:layout_constraintTop_toTopOf="@id/userProfileImage"
                app:layout_constraintBottom_toBottomOf="@id/userProfileImage"
                android:maxLines="1"
                android:layout_marginStart="4dp"
                tools:text="Jon Sno"
                android:text="@{suggestion.userFullName}"/>
        <TextView
                android:id="@+id/suggestionMessage"
                style="@style/SuggestionMessageStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/userProfileImage"
                app:layout_constraintStart_toStartOf="@id/userProfileImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                tools:text="It was really great experience using your service. Hope we will get the same for years to come."
                android:text="@{suggestion.message}"/>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:id="@+id/reviewSummaryLayout"
                android:hint="@string/write_your_reply"
                android:background="@drawable/bg_reply"
                android:maxLength="@integer/char_length_reply"
                android:layout_marginStart="@dimen/marginStartItem"
                android:layout_marginTop="@dimen/marginTopItem"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/suggestionMessage">
            <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextStyle"
                    android:id="@+id/suggestionMessageInput"
                    android:lines="4"
                    android:padding="@dimen/drawable_padding"
                    android:background="@null"
                    android:gravity="start"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
                android:id="@+id/sendSuggestionButton"
                style="@style/ButtonFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopItem"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewSummaryLayout"
                android:text="@string/send"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
